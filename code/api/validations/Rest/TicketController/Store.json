{
  "type": "object",
  "properties": {
    "topic": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "pattern": "^[^\\s].*[^\\s]$"
    },
    "text": {
      "type": "string",
      "minLength": 2,
      "maxLength": 4000,
      "pattern": "^[^\\s].*[^\\s]$"
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20,
          "pattern": "^[^\\s].*[^\\s]$"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+[1-9]\\d{1,14}$"
        },
        "email": {
          "type": "string",
          "minLength": 5,
          "maxLength": 255,
          "format": "email",
          "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
        }
      },
      "required": ["name", "phone", "email"],
      "additionalProperties": false
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 255
      }
    }
  },
  "required": ["topic", "text", "customer", "attachments"],
  "additionalProperties": false
}
